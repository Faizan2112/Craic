<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:padding="@dimen/padding_sizes5">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/padding_sizes20"
        app:cardElevation="@dimen/padding_sizes10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:background="@color/white"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".6"
                android:background="@drawable/bottombutton"
                android:src="@drawable/title"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".1"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:padding="@dimen/padding_sizes3"
                android:weightSum="1"

                >

                <ImageView

                    android:layout_width="0dp"
                    android:layout_height="@dimen/main_card_head_height"
                    android:layout_weight=".15"

                    android:src="@drawable/share" />


                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".03" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/upload_titleti"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:gravity="bottom"
                    android:hint="@string/title"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    app:counterEnabled="true"
                    app:counterMaxLength="25"

                    >

                    <EditText
                        android:id="@+id/upload_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"

                        />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".1"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:padding="@dimen/padding_sizes3"
                android:weightSum="1"

                >

                <ImageView

                    android:layout_width="0dp"
                    android:layout_height="@dimen/main_card_head_height"
                    android:layout_weight=".15"

                    android:src="@drawable/share" />


                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".03" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/upload_summaryti"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:gravity="bottom"
                    android:hint="@string/summary"

                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    app:counterEnabled="true"
                    app:counterMaxLength="100">

                    <EditText
                        android:id="@+id/upload_summary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"

                        />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".1"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:padding="@dimen/padding_sizes3"
                android:weightSum="1"

                >

                <ImageView

                    android:layout_width="0dp"
                    android:layout_height="@dimen/main_card_head_height"
                    android:layout_weight=".15"

                    android:src="@drawable/share" />


                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".03" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/upload_descriptionti"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:hint="@string/description"
                    android:gravity="bottom"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    app:counterEnabled="true"
                    app:counterMaxLength="300"
                    >

                    <EditText
                        android:id="@+id/upload_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"

                        />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".1"
                android:background="@drawable/border"
                android:orientation="horizontal"
                android:padding="@dimen/padding_sizes3"
                android:weightSum="1"

                >

                <ImageView

                    android:layout_width="0dp"
                    android:layout_height="@dimen/main_card_head_height"
                    android:layout_weight=".15"

                    android:src="@drawable/share" />


                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".03" />

               <RadioGroup
                   android:id="@+id/upload_radio_group"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight=".8"
                   android:weightSum="1"
                   android:orientation="horizontal"
                   >
                   <RadioButton
                       android:id="@+id/upload_private"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight=".5"
                       android:text="Private"

                       />
                   <RadioButton
                       android:id="@+id/upload_public"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight=".5"
                       android:text="Public"

                       />

               </RadioGroup>

            </LinearLayout>
            <Button
                android:id="@+id/upload_art"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:text="@string/senddata"
                android:textColor="@color/white"
                android:background="@drawable/bottomnv"
                />
        </LinearLayout>

</android.support.v7.widget.CardView></ScrollView>

