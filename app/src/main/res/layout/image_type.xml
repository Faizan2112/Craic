<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_linr_height"
    android:orientation="vertical"
    android:weightSum="1">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_card_view_height"
        app:cardBackgroundColor="@color/colorLightBack"
        app:cardCornerRadius="@dimen/main_card_ele_size"
        app:cardElevation="@dimen/main_card_ele_size">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".22"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/home_head_image"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/main_card_bottom_height"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:layout_weight=".15"
                    android:gravity="center"

                    >

                </ImageView>

                <TextView
                    android:id="@+id/home_head_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight=".6"
                    android:gravity="center"
                    android:text="demotext"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_size22"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/home_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight=".25"
                    android:gravity="center"
                    android:text="date / time"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/text_size14"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".7">

                <ImageView
                    android:id="@+id/home_main_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY" />
                <!-- android:scaleType="matrix"
                FOR SCALING IMAGE
                -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/activity_horizontal_margin"

                android:layout_weight=".1"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_sizes5"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="28dp"
                        android:layout_weight=".33"
                        android:gravity="center"

                        />

                    <android.support.v7.widget.CardView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".4"
                        android:padding="@dimen/padding_sizes5"
                        app:cardCornerRadius="@dimen/activity_horizontal_margin">

                        <TextView
                            android:id="@+id/home_likes"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="5"
                            android:background="@drawable/bottombutton"

                            />

                    </android.support.v7.widget.CardView>

                </LinearLayout>
                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".4">
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        app:cardCornerRadius="@dimen/activity_horizontal_margin"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bottombutton"
                            android:padding="5dp"
                            android:weightSum="1">
                            <!-- <ImageView
                                 android:layout_width="0dp"
                                 android:layout_height="match_parent"
                                 android:layout_weight=".19"
                                 android:background="@drawable/ic_mood_black_24dp"
                                 android:gravity="center"

                                 />
-->


                            <ImageView
                                android:id="@+id/home_image_share"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".33"

                                android:background="@drawable/share46"


                                />

                            <ImageView
                                android:id="@+id/home_main_downloadImage"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".33"
                                android:background="@drawable/down46"
                                android:gravity="center"

                                />

                            <ImageView
                                android:id="@+id/home_image_like"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".33"
                                android:background="@drawable/like"
                                android:gravity="center"
                                android:visibility="visible" />

                            <ImageView
                                android:id="@+id/home_image_unlike"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".33"
                                android:background="@drawable/share"
                                android:gravity="center"
                                android:visibility="invisible" />

                            <!--/>-->

                            <!--<ImageView-->
                            <!--android:id="@+id/imageView2"-->
                            <!--android:layout_width="0dp"-->
                            <!--android:layout_height="match_parent"-->
                            <!--android:layout_weight=".19"-->
                            <!--android:background="@drawable/ic_mood_black_24dp"-->

                            <!--android:gravity="center" />-->
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>

