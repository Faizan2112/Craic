<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_sizes10"
    android:background="#cfe1e0"

    >
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/left_layout"
        android:layout_width="60dp"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/comment_userimage"
            android:layout_width="60dp"
            android:layout_height="match_parent"

            />
    </LinearLayout>
    <RelativeLayout
        android:layout_toRightOf="@id/left_layout"
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:orientation="vertical"
            android:padding="@dimen/padding_sizes5"
            >
            <TextView
                android:id="@+id/comment_username_comment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:text="name + comment"

                />
            <TextView

                android:id="@+id/comment_usercommenttime"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:text="date time"
                />

        </LinearLayout>
    </RelativeLayout>

  </RelativeLayout>

