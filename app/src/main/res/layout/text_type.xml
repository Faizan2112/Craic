<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_linr_height"
    android:orientation="vertical"
    android:weightSum="1"
    android:id="@+id/home_main_text_type"
    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_card_view_height"
        app:cardBackgroundColor="@color/colorLightBack"
        app:cardCornerRadius="@dimen/main_card_ele_size"
        app:cardElevation="@dimen/main_card_ele_size">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <ImageView
                android:id="@+id/home_head_image"
                android:layout_width="@dimen/main_card_head_height"
                android:layout_height="@dimen/main_card_head_height"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@drawable/bottombutton"
                android:gravity="center">

            </ImageView>

            <!-- android:scaleType="matrix"
            FOR SCALING IMAGE
            -->
            <TextView
                android:padding="@dimen/activity_horizontal_margin"
                android:id="@+id/home_main_text"
                android:layout_width="match_parent"
                android:text="demotest "
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_height="@dimen/main_card_image_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_card_head_height"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:padding="@dimen/main_card_ele_size"
                android:weightSum="1"

                >


                <TextView
                    android:id="@+id/main_date_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"

                    android:textColor="@color/fontPrimary"
                    android:textSize="@dimen/main_card_head_text_size" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        app:cardCornerRadius="@dimen/activity_horizontal_margin"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bottombutton"
                            android:padding="@dimen/main_card_ele_size"
                            android:weightSum="1">
                            <!-- <ImageView
                                 android:layout_width="0dp"
                                 android:layout_height="match_parent"
                                 android:layout_weight=".19"
                                 android:background="@drawable/ic_mood_black_24dp"
                                 android:gravity="center"

                                 />
-->
                            <ImageView
                                android:id="@+id/home_listen_text"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".33"
                                android:background="@drawable/like"
                                android:gravity="center"

                                />

                            <ImageView
                                android:id="@+id/home_share_text"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".33"

                                android:background="@drawable/share"


                                />

                            <ImageView
                                android:id="@+id/home_copy_text"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".33"

                                android:background="@drawable/share"


                                />

                            <!--<ImageView-->
                            <!--android:layout_width="0dp"-->
                            <!--android:layout_height="match_parent"-->
                            <!--android:layout_weight=".19"-->
                            <!--android:background="@drawable/ic_archive_black_24dp"-->
                            <!--android:gravity="center"-->

                            <!--/>-->

                            <!--<ImageView-->
                            <!--android:id="@+id/imageView2"-->
                            <!--android:layout_width="0dp"-->
                            <!--android:layout_height="match_parent"-->
                            <!--android:layout_weight=".19"-->
                            <!--android:background="@drawable/ic_mood_black_24dp"-->

                            <!--android:gravity="center" />-->
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>


