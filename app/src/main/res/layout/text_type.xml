<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_linr_height"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".22"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/home_text_head_image"
                android:layout_width="0dp"
                android:layout_height="@dimen/main_card_bottom_height"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_weight=".15"
                android:gravity="center"

                >

            </ImageView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:layout_weight=".6"
                android:orientation="vertical"
                android:padding="@dimen/padding_sizes15"
                android:weightSum="1">

                <TextView
                    android:id="@+id/home_head_text_username"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".3"
                    android:text="Username"
                    android:textColor="#000"
                    android:textSize="@dimen/text_size12"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/home_head_text_title"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".3"
                    android:text="Usertitle"
                    android:textColor="#000"
                    android:textSize="@dimen/text_size12"
                    android:textStyle="bold" />
            </LinearLayout>


            <TextView
                android:id="@+id/home_date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25"

                android:padding="@dimen/padding_sizes15"

                android:text="date / time"
                android:textColor="#000"
                android:textSize="@dimen/text_size10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".7">

            <TextView
                android:id="@+id/home_main_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:padding="@dimen/padding_sizes10"
                android:scaleType="fitXY" />
            <!-- android:scaleType="matrix"
            FOR SCALING IMAGE
            -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/activity_horizontal_margin"

            android:layout_weight=".1"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                android:orientation="horizontal"
                android:padding="@dimen/padding_sizes5"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".33"
                    android:gravity="center"

                    />



            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".4"
                android:orientation="horizontal"
                android:padding="@dimen/padding_sizes5">



                    <!-- <ImageView
                         android:layout_width="0dp"
                         android:layout_height="match_parent"
                         android:layout_weight=".19"
                         android:background="@drawable/ic_mood_black_24dp"
                         android:gravity="center"

                         />
--> <ImageView
                android:id="@+id/home_image_like"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                android:background="@drawable/like"
                android:gravity="center"
                android:visibility="visible" />

                    <ImageView
                        android:id="@+id/home_image_unlike"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".1"
                        android:background="@drawable/unlike"
                        android:gravity="center"
                        android:visibility="gone" />
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".02" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".15"
                        android:gravity="center"
                        android:text="2555"
                        android:textSize="@dimen/text_size10"

                        />
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".02" />


                <ImageView
                    android:id="@+id/home_comment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1"
                    android:background="@drawable/share46"
                    android:gravity="center"

                    />


                <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".02" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".18"
                        android:gravity="center"
                        android:text="2555"
                        android:textSize="@dimen/text_size10"

                        />
                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".02" />
                    <ImageView
                        android:id="@+id/home_share"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight=".1"
                        android:background="@drawable/listen46"


                        />


                    <!--/>-->

                    <!--<ImageView-->
                    <!--android:id="@+id/imageView2"-->
                    <!--android:layout_width="0dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_weight=".19"-->
                    <!--android:background="@drawable/ic_mood_black_24dp"-->

                    <!--android:gravity="center" />-->
                </LinearLayout>

        </LinearLayout>
        </LinearLayout>


</LinearLayout>





