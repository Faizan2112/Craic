<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dreamworld.craic.activity.DetailContentActivity"
    android:weightSum="1"
    android:background="#000"
    >

 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".9"


        >
<ImageView
    android:adjustViewBounds="true"
    android:id="@+id/detail_main_image"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:scaleType="fitCenter"

    />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1"
       android:orientation="horizontal"
        android:weightSum="1"
        >
        <ImageView
            android:id="@+id/detail_main_download"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"

            android:background="@drawable/bottombutton"
            />
        <ImageView
            android:padding="@dimen/activity_horizontal_margin"
            android:id="@+id/detail_main_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/bottombutton"
            />
    </LinearLayout>
</LinearLayout>
